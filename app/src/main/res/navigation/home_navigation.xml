<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/characters">


    <fragment
        android:id="@+id/characters"
        android:name="com.jeancorzo.rickandmorty.characters.ui.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_locationsFragment"
            app:destination="@id/locations" />
    </fragment>

    <fragment
        android:id="@+id/locations"
        android:name="com.jeancorzo.rickandmorty.home.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" >
        <action
            android:id="@+id/action_locationsFragment_to_episodesFragment"
            app:destination="@id/episodes" />
    </fragment>

    <fragment
        android:id="@+id/episodes"
        android:name="com.jeancorzo.rickandmorty.home.EpisodesFragment"
        android:label="fragment_episodes"
        tools:layout="@layout/fragment_episodes" />

</navigation>