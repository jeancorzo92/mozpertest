<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="character"
            type="com.jeancorzo.rickandmorty.characters.model.Character" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_character_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:imageUrl="@{character.imageUrl}"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/item_character_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{character.name}"
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toTopOf="@+id/item_character_support_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_character_image"
                tools:text="Rick SÃ¡nchez" />

            <TextView
                android:id="@+id/item_character_support_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{character.status}"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_character_text"
                app:layout_constraintTop_toBottomOf="@+id/item_character_text"
                tools:text="Alive" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>